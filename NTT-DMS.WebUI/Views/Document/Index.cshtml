@model PaginatedList<NTT_DMS.Data.DocumentViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item">Documents </li>

                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<form action="/Document/Index" method="get">
    <div class="form-actions no-color">
        <p>
            <input type="text" class="form-group" name="str" placeholder="Search Documents.." />
            <input type="submit" value="Search" class="btn btn-default btn-sm" />
        </p>
    </div>
</form>

@if (TempData["error"] != null)
{
    <div class="alert alert-warning" role="alert">
        <strong>Failed!</strong> @TempData["error"].
    </div>
}

<form action="/Document/Delete" method="post">
    @if (!string.IsNullOrEmpty(ViewBag.success))
    {
        <div class="alert alert-success" role="alert">
            <strong>Success!</strong> @ViewBag.success.
        </div>
    }
    @if (!string.IsNullOrEmpty(ViewBag.error))
    {
        <div class="alert alert-warning" role="alert">
            <strong>Failed!</strong> @ViewBag.error.
        </div>
    }
<table class="table">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                Id
            </th>
            <th>
                Name
            </th>

            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                        <input type="checkbox" name="deleteDocumentIds" id="deleteDocumentIds" value="@item.DocumentId" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                     <a href="@Url.Action("DownloadAsync", "Document", new { id = item.DocumentId })" class="btn btn-info">Download</a>
                </td>
            </tr>
        }
    </tbody>
</table>
    <div class="modal-footer">
        <p>
            <button type="submit" class="btn btn-danger">Delete Selected</button>
        </p>
    </div>
</form>
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-page="@(Model.PageIndex - 1)"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-page="@(Model.PageIndex + 1)"
   class="btn btn-default @nextDisabled">
    Next
</a>