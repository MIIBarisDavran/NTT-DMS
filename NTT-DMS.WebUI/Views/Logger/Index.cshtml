@model PaginatedList<NTT_DMS.Data.Log>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<style>
    .document-preview-container {
        margin: 20px;
    }

    .preview-area {
        border: 1px solid #ccc;
        padding: 10px;
        width: 100%;
        height: 500px;
        overflow: auto;
    }

        .preview-area img {
            max-width: 100%;
            max-height: 100%;
        }

        .preview-area iframe {
            width: 100%;
            height: 100%;
        }
</style>
<html>
<head>
</head>
<body>
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Logs</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item">Logs</li>

                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<form action="/Logger/Index" method="get">
     <div class="margin-" style="display:flex;margin-bottom:20px;"> 
            <input type="text" class="form-control" name="str" style="width:200px;" placeholder="Search Logs.." value="@Context.Request.Query["str"]" />
            <input type="submit" value="Search" class="btn btn-secondary my-2 my-sm-0" style="margin-left:10px;" /> 
     </div>  
</form>
@if (TempData["error"] != null)
{
    <div class="alert alert-warning" role="alert">
        <strong>Failed!</strong> @TempData["error"].
    </div>
}
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].LogID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].EventType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].TableName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].ActionID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].RecordID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].ColumnName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].OriginalValue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].NewValue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Created_by)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Created_date)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LogID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TableName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ActionID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RecordID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ColumnName)
                    </td>
                    <td>
                        @if (item.OriginalValue != null && item.OriginalValue.Length > 22)
                        {
                            <span>@item.OriginalValue.Substring(0, 22)</span>
                            <button class="btn btn-link" type="button" data-original-value="@item.OriginalValue" onclick="showOriginalValue(this)">
                                Show more
                            </button>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.OriginalValue)
                        }
                    </td>
                    <td>
                        @if (item.NewValue != null && item.NewValue.Length > 22)
                        {
                            <span>@item.NewValue.Substring(0, 22)</span>
                            <button class="btn btn-link" type="button" data-new-value="@item.NewValue" onclick="showNewValue(this)">
                                Show more
                            </button>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.NewValue)
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created_by)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created_date)
                    </td>
                </tr>
            }
        </tbody>
    </table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-page="@(Model.PageIndex - 1)"
   asp-route-str="@Context.Request.Query["str"]"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-page="@(Model.PageIndex + 1)"
   asp-route-str="@Context.Request.Query["str"]"
   class="btn btn-default @nextDisabled">
    Next
</a>
    <div class="modal fade" id="valueModal" tabindex="-1" aria-labelledby="valueModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="valueModalLabel">Value Preview</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="previewArea" class="preview-area"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


@section scripts {
    <script src="~/adminlte/plugins/DocumentPreview/DocumentPreview.js"></script>
}