<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Directory Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.3.12/themes/default/style.min.css" /> 
    @* <link rel="stylesheet" href="~/adminlte/plugins/jsTree/jsTree.min.css" /> *@
    <style>
        #tree {
            margin: 20px;
        }
    </style>
</head>
<body>
    <h3>Directory Management</h3>
    <div id="tree"></div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script> 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.3.12/jstree.min.js"></script> 
    @* <script src="~/adminlte/plugins/jsTree/jsTree.js"></script> *@
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '@Url.Action("GetDirectoryTree", "Directory")',
                method: 'GET',
                success: function (data) {
                    $('#tree').jstree({
                        'core': {
                            'data': convertToJsTreeFormat(data)
                        }
                    });
                }
            });

            function convertToJsTreeFormat(nodes) {
                return nodes.map(function (node) {
                    return {
                        text: node.Name,
                        children: node.IsDirectory ? convertToJsTreeFormat(node.Children) : false
                    };
                });
            }
        });
    </script>
</body>
</html>
