@model NTT_DMS.Data.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>NTT-DMS SignUp</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="~/images/logo.png" type="image/gif" sizes="16x16">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Theme style -->
    @* <link rel="stylesheet" href="~/adminlte/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/adminlte/plugins/iCheck/square/blue.css"> *@
    <link rel="stylesheet" href="~/lib/dist/css/bootstrap.css">
    <link rel="stylesheet" href="~/adminlte/plugins/loginPage/css/loginPage.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>
<body class="hold-transition login-page">
    <div class="background">
        <div class="shape"></div>
        <div class="shape"></div>
    </div>
    <form action="/Auth/Signup" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <label for="email">Email</label>
        <div class="form-group has-feedback col">
            <input asp-for="UserEmail" class="form-control" placeholder="Email" />
            <span asp-validation-for="UserEmail" class="text-danger"></span>
        </div>

        <label for="userName">Username</label>
        <div class="form-group has-feedback col">
            <input asp-for="UserName" class="form-control" placeholder="Name" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <label for="password">Password</label>
        <div class="form-group has-feedback col">
            <input type="password" asp-for="password" class="form-control" placeholder="Password" />
            <span asp-validation-for="password" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Sign Up</button>
            </div>
            <div style="margin-top:10px">
                <a style="font-weight:600" href="~/Auth/Index">Back</a>
            </div>
            <!-- /.col -->
        </div>
    </form>
    <script src="~/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- iCheck -->

</body>
</html>

